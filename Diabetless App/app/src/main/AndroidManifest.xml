<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Diabetless"
        tools:targetApi="31">
        <activity
            android:name=".ui.main.bottomSheetMenu.profile.changePassword.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ui.health.bloodSugar.history.HistoryBloodActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ui.health.bodyComposition.BodyCompositionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ui.health.bloodSugar.BloodSugarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ui.mealPlanner.mealCart.MealCartActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Diabetless.NoActionBar" />
        <activity
            android:name=".ui.main.ui.mealPlanner.favorites.FavoritesActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Diabetless.NoActionBar" />
        <activity
            android:name=".ui.main.ui.mealPlanner.mealDetail.MealDetailActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Diabetless.NoActionBar" />
        <activity
            android:name=".ui.detail.DetailActivity"
