<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Diabetless" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="bgPrimary">@color/white</item>
        <item name="bgSecondary">@color/white</item>
        <item name="textPrimary">@color/black</item>
        <item name="bottomNavBgColor">@color/white</item>
        <item name="bottomNavItemColorSelected">@color/deepBlue</item>
        <item name="bottomNavItemColorUnselected">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.Diabetless.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.Diabetless.Light" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Diabetless" parent="Base.Theme.Diabetless" />

    <style name="Theme.Diabetless.Fullscreen" parent="Theme.Diabetless">
        <item name="android:actionBarStyle">@style/Widget.Theme.Diabetless.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Diabetless.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Light Mode -->
    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextBackground">
        <item name="android:background">@drawable/text_bg_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScreenBackgroundFragment">
        <item name="android:background">@color/gray_light</item>
        <item name="android:fillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardBackgroundFragment">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/deepBlue</item>
    </style>

    <style name="AppBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@color/lightGray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomMenu">
        <item name="android:background">@drawable/bottom_menu_bg_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fillColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TableRow">
        <item name="android:background">@drawable/background_stroke_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>